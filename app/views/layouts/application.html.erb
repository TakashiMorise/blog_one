<!DOCTYPE html>
<html>
  <head>
    <title>BlogOne</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__logo">
        <h1 class="header__logo"><a href="/">Blog-One</a></h1>
      </div>
        <% if user_signed_in? %>
          <div class="header__buttons">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'header__button' %>
            <%= link_to "投稿する", blogs_new_path, method: :get %>
            <a href="/users/<%=current_user.id %>">マイページ</a>
          </div>
        <% else %>
          <div class="header__buttons">
            <%= link_to "ログイン", new_user_session_path, method: :get, class: 'header__button' %>
            <%= link_to "新規登録", new_user_registration_path, method: :get, class: 'header__button' %>
          </div>
        <% end %>
    </header>
    <%= yield %>
  </body>
</html>
